remove.nonvariant <- function(tab)
{
 ncols <- ncol(tab) # nrow and ncol return the number of rows
                    # or columns present in x.
 i <- 3
 while(i < ncols)
 {
    i <- i + 1
    m <- mean(as.numeric(tab[,i])) #selects a column and avgs it
    if (m == 1 | m == 0)
    {
      tab <- tab[,-i]
      i <- i - 1
      ncols <- ncols - 1
    }
  } 
  return (tab)
}   
